CC = gcc
SRC = holberton.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -c -o $@ $<

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
